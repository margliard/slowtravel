<div class="banner banner-bg" ;>
  <h1 class="title-banner">Worried about your CO2 footprint ? Find it out!</h1>
    <div class="search-bar">

      <%= form_tag experiences_path, method: :get do %>
        <div class="search-form-control input-group d-flex">
          <%= select_tag :city,
            options_for_select(CS.countries.values),
            class: "form-control",
            placeholder: "In which city or country you want to go?"
          %>
          <%= submit_tag "Compute", class: "btn btn-ghost" %>
      <% end %>

    </div>
  </div>
</div>
