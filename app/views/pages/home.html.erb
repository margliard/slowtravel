
<div class="banner banner-bg" ;>
  <h1 class="title-banner">Find ecofriendly experiences all around the world</h1>
  <div class="search-bar">
    <ul class="list-inline tabs-underlined">
      <li>
        <%= link_to "Accommodations", search_accommodations_path, class: "tab-underlined active" %>
      </li>
      <li>
        <%= link_to "Activities", search_activities_path, class: "tab-underlined" %>
      </li>
      <li>
        <%= link_to "Inspirations", search_inspirations_path, class: "tab-underlined" %>
      </li>
    </ul>
    <div class="container d-flex justify-content-center">
      <%= form_tag experiences_path, method: :get do %>
      <div class="search-form-control input-group d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an experience"
        %>
      <% end %>
      <%= submit_tag "Search", class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</div>

