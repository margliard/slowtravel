
<div class="banner banner-bg" ;>
  <h1 class="title-banner">Find ecofriendly experiences all around the world</h1>
  <%= form_tag experiences_path, method: :get do %>
  <div class="search-bar">
    <div class="location-block">
      <h4 class="title-location">Location</h4>
      <div
        class="search-form-control input-group d-flex"
        data-controller="geocoder"
        data-geocoder-api-key-value= "<%= ENV['MAPBOX_API_KEY'] %>"
        placeholder= "Where do you want to go?"
        aria-label= "Where do you want to go?"
      >
        <%=
          text_field_tag(
            :query,
            params[:query],
            class: "form-control d-none",
            data: { geocoder_target: "address" }
          )
        %>
      </div>
    </div>

    <div>
      <h4 class="title-type">Type</h4>
      <div class="container" style="text-align:center">
        <input class="checkbox1" type="checkbox" id="accommodation">
        <label for="accommodation">Accommodations</label>
        <input class="checkbox1" type="checkbox" id="restaurants">
        <label for="restaurants">Restaurants</label>
        <input class="checkbox1" type="checkbox" id="activities">
        <label for="activities">Activities</label>
        <input class="checkbox1" type="checkbox" id="inspirations">
        <label for="inspirations">Inspirations</label>
      </div>
    </div>

    <div>
      <%= submit_tag "Let's go!", class: "btn btn-ghost" %>
    </div>

  </div>
  <% end %>
</div>

